import flet as ft 
#se abrevia flet como ft


def main(page: ft.Page):
    page.title= "Aplicaci칩n flet"

    def cambiar_color(e):
        t.color="green"
        t.size=30

        for i in range (0,10):
            text= ft.Text(value=f"Texto numero: {i}", size=30)
