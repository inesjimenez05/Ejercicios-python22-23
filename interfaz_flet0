import flet as ft 
#se abrevia flet como ft


def main(page: ft.Page):
    page.title= "Aplicaci칩n flet"

    def cambiar_color(e):
       t.value= textField_Nombre.value
       page.update()

    #Componente texto


    t= ft.Text(value="Introducci칩n a FLet", color="red", size=20)
    page.add(t) #add a침ade y actualiza

    t.value="Cambiando los datos"
